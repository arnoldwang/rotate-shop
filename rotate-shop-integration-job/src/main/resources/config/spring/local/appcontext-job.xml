<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.dianping"/>
    <context:annotation-config/>

    <bean id="syncRotateGroupTypeTask" class="com.dianping.rotate.shop.task.SyncRotateGroupTypeTask"/>
    <bean id="syncShopExtendTypeTask" class="com.dianping.rotate.shop.task.SyncShopExtendTypeTask"/>

    <!-- Check单店连锁店一致性 -->
    <bean id="syncRotateGroupTypeTaskJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="syncRotateGroupTypeTask"/>
        <property name="targetMethod" value="go"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="syncRotateGroupTypeExtCronTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="syncRotateGroupTypeTaskJob"/>
        <property name="cronExpression" value="${rotate-shop-integration-job.sync.rotateGroup.type.quartz.expression}"/>
    </bean>

    <!-- check大客户一致性 -->
    <bean id="syncShopExtendTypeTaskJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="syncShopExtendTypeTask"/>
        <property name="targetMethod" value="go"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="syncShopExtendTypeExtCronTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="syncShopExtendTypeTaskJob"/>
        <property name="cronExpression" value="${rotate-shop-integration-job.sync.apolloshopextend.type.quartz.expression}"/>
    </bean>


    <bean id="reportDataProcessor" class="com.dianping.rotate.shop.task.ReportDataProcessor" scope="prototype">
    </bean>

    <!-- Business Data 数据同步  -->
    <bean id="apolloShopBusinessDataProcessorTask" class="com.dianping.rotate.shop.task.ApolloShopBusinessDataProcessorTask">
    </bean>

    <bean id="apolloShopBusinessDataProcessorTaskJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="apolloShopBusinessDataProcessorTask"/>
        <property name="targetMethod" value="process"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="apolloShopBusinessDataProcessorTaskExtCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="apolloShopBusinessDataProcessorTaskJob"/>
        <property name="cronExpression" value="${rotate-shop-integration-job.apolloShopBusinessDataProcessorTask.quartz.expression}"/>
    </bean>

    <!-- ApolloShop Rating 数据同步  -->
    <bean id="apolloShopRatingDataProcessorTask" class="com.dianping.rotate.shop.task.ApolloShopRatingDataProcessorTask">
    </bean>

    <bean id="apolloShopRatingDataProcessorTaskJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="apolloShopRatingDataProcessorTask"/>
        <property name="targetMethod" value="process"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="apolloShopRatingDataProcessorTaskExtCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="apolloShopRatingDataProcessorTaskJob"/>
        <property name="cronExpression" value="${rotate-shop-integration-job.apolloShopRatingDataProcessorTask.quartz.expression}"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobDetails">
            <list>
                <ref bean="syncRotateGroupTypeTaskJob"/>
                <ref bean="syncShopExtendTypeTaskJob"/>
                <ref bean="apolloShopBusinessDataProcessorTaskJob"/>
                <ref bean="apolloShopRatingDataProcessorTaskJob"/>
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="syncRotateGroupTypeExtCronTrigger"/>
                <ref bean="syncShopExtendTypeExtCronTrigger"/>
                <ref bean="apolloShopBusinessDataProcessorTaskExtCronTrigger"/>
                <ref bean="apolloShopRatingDataProcessorTaskExtCronTrigger"/>
            </list>
        </property>
    </bean>

</beans>