<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!--消息的目的地 Destination ApolloShop-->
    <bean id="destinationApolloShop" class="com.dianping.swallow.common.message.Destination"
          factory-method="topic">
        <constructor-arg value="dp_apollo_shop_change"/> <!-- ${topicName}为消息的Topic，需自定义-->
    </bean>
    <!--消息的目的地 Destination RotateGroup-->
    <bean id="destinationRotateGroup" class="com.dianping.swallow.common.message.Destination"
          factory-method="topic">
        <constructor-arg value="dp_apollo_rotategroup_change"/> <!-- ${topicName}为消息的Topic，需自定义-->
    </bean>
    <!--消息的目的地 Destination RotateGroupShop-->
    <bean id="destinationRotateGroupShop" class="com.dianping.swallow.common.message.Destination"
          factory-method="topic">
        <constructor-arg value="dp_apollo_rotategroupshop_change"/> <!-- ${topicName}为消息的Topic，需自定义-->
    </bean>
    <!--生产者的配置类 ProducerConfig -->
    <bean id="producerConfig" class="com.dianping.swallow.producer.ProducerConfig">
        <property name="mode" value="SYNC_MODE" /><!--同步模式(推荐)-->
    </bean>
    <!--生产者的工厂类 ProducerFactory -->
    <bean id="producerFactory" class="com.dianping.swallow.producer.impl.ProducerFactoryImpl"
          factory-method="getInstance" />
    <!--生产者 ProducerClient -->
    <bean id="rotateGroupProducerClient" factory-bean="producerFactory"
          factory-method="createProducer">
        <constructor-arg>
            <ref bean="destinationRotateGroup" />
        </constructor-arg>
        <constructor-arg>
            <ref bean="producerConfig" />
        </constructor-arg>
    </bean>
    <bean id="rotateGroupShopProducerClient" factory-bean="producerFactory"
          factory-method="createProducer">
        <constructor-arg>
            <ref bean="destinationRotateGroupShop" />
        </constructor-arg>
        <constructor-arg>
            <ref bean="producerConfig" />
        </constructor-arg>
    </bean>
    <bean id="apolloShopProducerClient" factory-bean="producerFactory"
          factory-method="createProducer">
        <constructor-arg>
            <ref bean="destinationApolloShop" />
        </constructor-arg>
        <constructor-arg>
            <ref bean="producerConfig" />
        </constructor-arg>
    </bean>



</beans>
