<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="RotateGroup">
    <typeAlias alias="RotateGroup" type="com.dianping.rotate.shop.entity.RotateGroupEntity" />
    <resultMap id="rotateGroup" class="RotateGroup">
        <result property="id" column="ID"/>
        <result property="bizID" column="BizID"/>
        <result property="type" column="Type"/>
        <result property="status" column="Status"/>
    </resultMap>

    <sql id="keys">
        BizID,
        Type,
        Status
    </sql>

    <sql id="key-value">
        (
        <include refid="keys"/>,
        CreatedTime
        )
        VALUES
        (
        #rotateGroup.bizID#,
        #rotateGroup.type#,
        #rotateGroup.status#,
        NOW()
        )
    </sql>

    <sql id="modify">
        SET
            BizID = #rotateGroup.bizID#,
            Type = #rotateGroup.type#,
            Status = #rotateGroup.status#
        WHERE ID = #rotateGroup.id#
    </sql>

    <insert id="addToRotateGroup" parameterClass="map">
        INSERT INTO RotateGroup
        <include refid="key-value"/>
        <selectKey resultClass="int" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
    
    <delete id="deleteRotateGroup" parameterClass="map">
        UPDATE RotateGroup
        SET
            Status = 0
        WHERE ID = #id#
    </delete>

    <update id="updateRotateGroup" parameterClass="map">
        UPDATE RotateGroup
        <include refid="modify"/>
    </update>

    <select id="queryRotateGroup" resultMap="rotateGroup" parameterClass="map">
        SELECT ID,
        <include refid="keys"/>
        FROM RotateGroup
        WHERE ID = #id# AND Status = 1
    </select>

    <select id="getRotateShop" resultMap="rotateGroup" parameterClass="map">
        SELECT
        rg.ID,
        rg.BizID,
        rg.Type,
        rg.Status
        FROM RotateGroup rg, RotateGroupShop rgs
        WHERE rg.ID = rgs.RotateGroupID AND rgs.ShopID = #shoID#
    </select>

    <select id="queryRotateGroupByBizIDAndShopID" resultMap="rotateGroup" parameterClass="map">
        SELECT
        rg.ID,
        rg.BizID,
        rg.Type,
        rg.Status
        FROM RotateGroup rg, RotateGroupShop rgs
        WHERE rg.ID = rgs.RotateGroupID and rg.Status != 0 and rgs.Status != 0 and rg.BizID = #bizID# AND rgs.ShopID = #shoID#
    </select>
</sqlMap>