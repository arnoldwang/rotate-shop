<sqlMap namespace="ApolloShop">

    <resultMap id="apolloShop" class="com.dianping.rotate.shop.entity.ApolloShopEntity">
        <result column="ShopID" property="shopID"/>
        <result column="ShopGroupID" property="shopGroupID"/>
        <result column="CityID" property="cityID"/>
        <result column="District" property="district"/>
        <result column="ShopType" property="shopType"/>
        <result column="Status" property="status"/>
    </resultMap>

    <sql id="keys">
        ShopID,
        ShopGroupID,
        CityID,
        District,
        ShopType,
        Status
    </sql>

    <select id="queryApolloShopByShopID" resultMap="apolloShop" parameterClass="int">
        SELECT
        <include refid="keys"/>
        FROM ApolloShop
        WHERE `ShopID`=#ShopID#;
    </select>

    <insert id="addApolloShop" parameterClass="map">
        INSERT INTO MR_ShopFuture
        (
        <include refid="keys"/>
        )
        values
        (
        #apolloShop.shopID#,
        #apolloShop.shopGroupID#,
        #apolloShop.cityID#,
        #apolloShop.district#,
        #apolloShop.shopType#,
        #apolloShop.status#
        )
        <selectKey resultClass="int" keyProperty="ShopID">
            SELECT @@IDENTITY AS ShopID
        </selectKey>
    </insert>

    <update id="deleteApolloShopByShopID" parameterClass="int">
        update from ApolloShop set Status = 0
        WHERE ShopID =#ShopId#
    </update>

</sqlMap>