<sqlMap namespace="ApolloShopExtend">

    <resultMap id="apolloShopExtend" class="com.dianping.rotate.shop.entity.ApolloShopExtendEntity">
        <result column="ID" property="id"/>
        <result column="ShopID" property="shopID"/>
        <result column="Type" property="type"/>
        <result column="BizID" property="bizID"/>
        <result column="Rating" property="rating"/>
        <result column="Status" property="status"/>
    </resultMap>

    <sql id="keys">
        ID,
        ShopID,
        Type,
        BizID,
        Rating,
        Status
    </sql>

    <select id="queryApolloShopExtendByShopID" resultMap="apolloShopExtend" parameterClass="int">
        SELECT
        <include refid="keys"/>
        FROM ApolloShopExtend
        WHERE `ShopID`=#ShopID#;
    </select>

    <insert id="addApolloShopExtend" parameterClass="map">
        INSERT INTO ApolloShopExtend
        (
        ShopID,
        Type,
        BizID,
        Rating,
        Status
        )
        values
        (
        #apolloShop.shopID#,
        #apolloShop.type#,
        #apolloShop.bizID#,
        #apolloShop.rating#,
        #apolloShop.status#
        )
        <selectKey resultClass="int" keyProperty="id">
            SELECT @@IDENTITY AS ID
        </selectKey>
    </insert>

    <update id="deleteApolloShopExtendByShopID" parameterClass="int">
        update from ApolloShopExtend set Status = 0
        WHERE ShopID =#ShopId#
    </update>

</sqlMap>