<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="MessageQueue">

    <resultMap id="messageQueue" class="com.dianping.rotate.shop.json.MessageEntity">
        <result column="ID" property="id"/>
        <result column="Msg" property="msg"/>
        <result column="SwallowID" property="swallowId"/>
        <result column="AttemptIndex" property="attemptIndex"/>
        <result column="Source" property="source"/>
        <result column="Status" property="status"/>
        <result column="Type" property="type"/>
    </resultMap>

    <resultMap id="messageStatistics" class="com.dianping.rotate.shop.json.MessageStatisticsEntity">
        <result column="title" property="title"/>
        <result column="total" property="total"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="keys">
        ID,
        Msg,
        SwallowID,
        AttemptIndex,
        Source,
        Status,
        Type,
        CreatedTime
    </sql>

    <sql id="key-value">
        (
        <include refid="keys"/>
        )
        values
        (
        #message.id#,
        #message.msg#,
        #message.swallowId#,
        #message.attemptIndex#,
        #message.source#,
        #message.status#,
        #message.type#,
        NOW()
        )
    </sql>


    <select id="getMessageByID" resultMap="messageQueue" parameterClass="map">
        SELECT
        <include refid="keys"/>
        FROM MessageQueue
        WHERE ID=#id#
        Limit 1
    </select>

    <select id="getMessageBySwallowID" resultMap="messageQueue" parameterClass="map">
        SELECT
        <include refid="keys"/>
        FROM MessageQueue
        WHERE SwallowID=#swallowId#
        Limit 1
    </select>

    <insert id="addToMessageQueue" parameterClass="map">
        INSERT INTO MessageQueue
        <include refid="key-value"/>
        <selectKey resultClass="int" keyProperty="id">
            SELECT @@IDENTITY AS ID
        </selectKey>
    </insert>

    <delete id="deleteMessagePhysically" parameterClass="map">
        delete from MessageQueue
        WHERE ID =#id#
    </delete>

    <delete id="deleteMessagePhysicallyBySwallowID" parameterClass="map">
        delete from MessageQueue
        WHERE SwallowID =#swallowId#
    </delete>

    <update id="deleteMessage" parameterClass="map">
        update  MessageQueue
        set Status = 0
        WHERE ID =#id#
    </update>

    <select id="getUnprocessedMessage" resultMap="messageQueue" parameterClass="map">
        SELECT
        <include refid="keys"/>
        FROM MessageQueue
        WHERE Source=#source#
        AND Type=#type#
        AND Status=1
        AND AttemptIndex&lt;#maxAttemptIndex#
        ORDER BY AttemptIndex ASC
        LIMIT #limit#
    </select>

    <update id="updateMessageAttemptIndex" parameterClass="map">
        update  MessageQueue
        set  AttemptIndex = #attemptIndex#
        WHERE ID =#id#
    </update>

    <update id="updateMessageAttemptIndexByType" parameterClass="map">
        update  MessageQueue
        set  AttemptIndex = #attemptIndex#
        WHERE Type = #type#
        AND Source = #source#
        AND Status = 1
    </update>

    <sql id="keysNoID">
        Msg,
        SwallowID,
        AttemptIndex,
        Source,
        Status,
        Type,
        CreatedTime
    </sql>

    <insert id="addMessageQueueToHistory">
        insert into MessageQueueHistory (<include refid="keysNoID"/>) select <include refid="keysNoID"/> from MessageQueue
        where Status = 0 or AttemptIndex >= 10
    </insert>

    <delete id="clearMessageQueue">
        delete from MessageQueue where Status = 0 or AttemptIndex >= 10
    </delete>

    <select id="getMessage" resultMap="messageQueue" parameterClass="map">
        SELECT
        <include refid="keys"/>
        FROM MessageQueue
        WHERE Source=#source#
        AND Type=#type#
        AND Status=#status#
        ORDER BY ID
        LIMIT #limit#
        OFFSET #offset#
    </select>

    <select id="getMessageCount" resultClass="int" parameterClass="map">
        SELECT COUNT(*)
        FROM MessageQueue
        WHERE Type = #type#
        AND Status = #status#
        AND Source = #source#
    </select>

    <select id="getMessageStatistics" resultMap="messageStatistics" parameterClass="map">
        SELECT date(CreatedTime) as title,count(*) as total,Status as status
        FROM MessageQueue
        WHERE Type = #type#
        AND Source = #source#
        group by date(CreatedTime),Status
    </select>



</sqlMap>