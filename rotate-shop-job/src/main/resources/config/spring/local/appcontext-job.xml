<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="messageSingleProcessTask" class="com.dianping.rotate.shop.task.MessageSingleProcessTask" init-method="run">
        <property name="runners">
            <list>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.CategorySingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.RegionSingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopAddSingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopMergeRestoreSingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopMergeSingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopStatusSingleMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopUpdateSingleMessageRunner"/>
            </list>
        </property>
    </bean>

    <bean id="messageBatchProcessTask" class="com.dianping.rotate.shop.task.MessageBatchProcessTask" init-method="run">
        <property name="runners">
            <list>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopAddBatchMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopStatusBatchMessageRunner"/>
                <bean class="com.dianping.rotate.shop.service.impl.message.runner.ShopUpdateBatchMessageRunner"/>
            </list>
        </property>
    </bean>

</beans>